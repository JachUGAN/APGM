<%provide(:title, 'Create User')%>

<h1>Create a new user</h1>


<div class="row">
	<div class="span6 offset0">

		<%= form_for(@user) do |f| %>

		<%= f.label :first_name %>
		<%= f.text_field :first_name %>

		<%= f.label :last_name %>
		<%= f.text_field :last_name %>

		<%= f.label :username %>
		<%= f.text_field :username %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :role %>
		<%= f.text_field :role %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
		
		<br />
		<%= f.submit "Create a new user", class: "btn btn-small btn-primary" %>
		
		<% end %>

	</div>
</div>
