<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>		<!-- :title is defined in the top of each page + full_title is defined in the app/helpers/application_helper.rb-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>		<!--calls  _header.html.erb-->


<div class="container">		<!--code to include a page content in the layout + container is a bootstrap function-->
	
	<% flash.each do |key, value| %>		<!--Initialization of the flash messages for error display -->
	<div class="alert alert-<%= key %>"><%= value %></div>
	<% end %>


	<%= yield %>

	<%= debug(params) if Rails.env.development? %>
</div>


</body>
</html>
