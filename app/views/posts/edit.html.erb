<% provide(:title, 'Edit Post')%>
<h1>Edit Post</h1>

<div class="row">
	<div class="span6 offset0">

		<%= form_for(@post) do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<%= f.label :content %>
		<%= f.text_area :content %>
		<br />
		<%= f.submit "Update Post", class: "btn btn-large btn-primary" %>
		
		<% end %>

	</div>
</div>
	