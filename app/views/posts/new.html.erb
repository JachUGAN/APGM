<h1>Create a new post</h1>



<div class="row">
	<div class="span6 offset0">

		<%= form_for(@post) do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<%= f.label :content %>
		<%= f.text_area :content %>
		<br />
		<%= f.submit "Create a new post", class: "btn btn-small btn-primary" %>
		
		<% end %>

	</div>
</div>
